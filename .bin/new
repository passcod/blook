#!/usr/bin/env bash

datetime=$(date --iso-8601=seconds)
date=$(date +"%Y-%b-%d")
date=${date,,}
title="$@"
slug=${title// /-}

cd "$(dirname "${BASH_SOURCE[0]}")/.."

file="${date}-${slug,,}.md"
path="${file}"

if [ ! -f "$path" ]; then
  cat <<TEMPLATE > "$path"
---
date: $datetime
title: $title
---

## Heading
TEMPLATE
  git add "$path"
else
  echo "File already exists" >&2
fi

echo "$file"
exec $EDITOR "$path"
